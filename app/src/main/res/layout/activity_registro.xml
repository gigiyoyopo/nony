<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="169dp"
            android:layout_height="97dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-black"
            android:text="REGISTRO"
            android:letterSpacing=".2"
            android:textColor="@android:color/black"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-medium"
            android:text="Nombre * :"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Apellido(s)*:"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etApellidos"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Número Telefónico * :"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="phone"
            android:background="@android:drawable/edit_text"
            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Correo electrónico*:"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/edit_text"
            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Contraseña * :"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etContrasena"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:background="@android:drawable/edit_text"
            android:padding="10dp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="sans-serif-medium"
            android:text="Código Postal *:"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etCodigoPostal"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="10dp" />


        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:background="#000000"
            android:fontFamily="sans-serif-black"
            android:text="REGISTRARSE"
            android:textAllCaps="true"
            android:textColor="@android:color/white" />


        <!-- faceboooook -->


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <LinearLayout
            android:id="@+id/btnFacebook"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="#1877F2"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.84">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logofb"
                />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center"
                android:text="Iniciar con Facebook"
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />
        <LinearLayout
            android:id="@+id/btnGoogle"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:background="@drawable/borde_input"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.934">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="12dp"
                android:src="@drawable/logog" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Iniciar con Google"
                android:textColor="#000000"
                android:textSize="16sp" />

        </LinearLayout>



        <TextView
            android:id="@+id/tvIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes una cuenta? Inicia Sesión."
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:textColor="#0000A0" />

    </LinearLayout>

</ScrollView>

