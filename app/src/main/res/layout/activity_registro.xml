<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@android:color/white"
    android:fillViewport="true">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="117dp"
            android:layout_height="66dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="REGISTRO"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre * :"
            android:textSize="15sp"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_gravity="start" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellido(s)*:"
            android:textSize="15sp"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etApellidos"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_gravity="start" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Número Telefónico * :"
            android:textSize="15sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etTelefono"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="phone"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_gravity="start" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo electrónico*:"
            android:textSize="15sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textEmailAddress"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_gravity="start" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contraseña * :"
            android:textSize="15sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etContrasena"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="textPassword"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_gravity="start" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código Postal *:"
            android:textSize="15sp"
            android:layout_marginTop="12dp" />

        <EditText
            android:id="@+id/etCodigoPostal"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_gravity="start" />


        <Button
            android:id="@+id/btnRegistrarse"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:text="REGISTRARSE"
            android:textColor="@android:color/white"
            android:background="#000000"
            android:textAllCaps="true" />


        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_google_button_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"

            />



        <LinearLayout
            android:id="@+id/btnFacebook"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="#1877F2"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/imgFbLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/facebook_logo"
                android:contentDescription="Facebook logo"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:id="@+id/tvFbText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continuar con Facebook"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textAllCaps="false" />

        </LinearLayout>


        <TextView
            android:id="@+id/tvIniciarSesion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Ya tienes una cuenta? Inicia Sesión."
            android:textSize="13sp"
            android:layout_marginTop="12dp"
            android:textColor="#0000A0" />

    </LinearLayout>

</ScrollView>

